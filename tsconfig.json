{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "composite": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "importHelpers": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "baseUrl": "./",
    "strict": true,
    "paths": {
      "@/*": ["app/*"]
    },
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "types": ["vite-plugin-electron/electron-env"]
  },
  "include": [
    "app/**/*.ts",
    "app/**/*.tsx",
    "app/**/*.d.ts",
    "app/**/*.vue",
    "tests/**/*.ts",
    "package.json",
    "electron"
  ]
}
